<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="5"
    >

    <TextView
        android:id="@+id/num_7"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_row="0"
        android:text="7" />
    <TextView
        android:id="@+id/num_8"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="8" />
    <TextView
        android:id="@+id/num_9"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:text="9" />
    <TextView
        android:id="@+id/num_4"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="4" />
    <TextView
        android:id="@+id/num_5"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="5" />
    <TextView
        android:id="@+id/num_6"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="6" />
    <TextView
        android:id="@+id/num_1"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="0"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:text="4" />
    <TextView
        android:id="@+id/num_2"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:text="5" />
    <TextView
        android:id="@+id/num_3"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="2"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:text="6" />

    <TextView
        android:id="@+id/num_comma"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text=" ." />

    <TextView
        android:id="@+id/num_0"
        style="@style/AppTheme.BotonCalculadora.Azul"
        android:layout_column="1"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:text="0" />
    <TextView
        android:id="@+id/func_eq"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="2"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:text="=" />
    <TextView
        android:id="@+id/func_divide"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:text="รท" />
    <TextView
        android:id="@+id/func_multiply"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:paddingHorizontal="38dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:text="x" />
    <TextView
        android:id="@+id/func_add"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_column="3"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:text="+" />

    <TextView
        android:id="@+id/func_substract"
        style="@style/AppTheme.BotonCalculadora.Rojo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="3"
        android:text=" -" />

</GridLayout>